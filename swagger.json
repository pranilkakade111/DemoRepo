{
    "swagger": "2.0",
    "info": {
        "description": "The Book-Store App",
        "version": "1.0.0",
        "title": "Book-Store-App"
    },
    "host": "localhost:8000",
    "tags": [
        {
            "name": "Book-Store-App",
            "description": "The Book Store App"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes":[
        "application/json"
    ],
    "produces":[
        "application/json"
    ],
    "paths": {
        "/user":{
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register As a End User",
                "consumes":[
                    "application/json"
                ],
                "produces":[
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "User",
                        "description": "User Object That Need to be Register",
                        "required": true,
                        "schema": {
                            "type":"object",
                            "properties": {
                                "firstName":{
                                    "type":"string"
                                },
                                "lastName":{
                                    "type":"string"
                                },
                                "email":{
                                    "type":"string"
                                },
                                "password":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "User Register Successfully..!"
                    },
                    "400":{
                        "description": "Failed To Register User..!"
                    },
                    "500":{
                        "description": "Internal Server Error..!"
                    }
                }
            }
        },
        "/admin":{
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register As Admin..!",
                "consumes":[
                    "application/json"
                ],
                "produces":[
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "User",
                        "required": true,
                        "schema": {
                            "type":"object",
                            "properties": {
                                "firstName":{
                                    "type":"string"
                                },
                                "lastName":{
                                    "type":"string"
                                },
                                "email":{
                                    "type":"string"
                                },
                                "password":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Admin register Successully"
                    },
                    "400":{
                        "description": "Failed To Register Admin"
                    },
                    "500":{
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/userLogin":{
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login Registered User",
                "consumes":[
                    "application/json"
                ],
                "produces":[
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "User",
                        "description": "User Credential that Need For Login",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "User Login successfully..!"
                    },
                    "400":{
                        "description": "Login Failed..!"
                    },
                    "500":{
                        "description": "Internal Server Error"
                    }
                }
                
            }
        },
        "/adminLogin":{
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login User Registered As a Admin",
                "consumes":[
                    "application/json"
                ],
                "produces":[
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "User",
                        "description": "Admin Object That Teed To Be Login",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Admin Login Successfully..!"
                    },
                    "400":{
                        "description": "Failed to Login"
                    },
                    "500":{
                        "description": "Internal Server error"
                    }
                }
            }
        },"/forgotPassword": {
            "post": {
                "tags": [
                    "Forgot Password"
                ],
                "description": "create a forgot password endpoint",
                "summary": "forgot password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Forgot Password",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Email sent successfully"
                    },
                    "400": {
                        "description": "Email Not Sent "
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "Reset Password"
                ],
                "description": "create a reset Password endpoint",
                "summary": "Reset Password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " Reset Password ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "newPassword": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Password reset Successfully"
                    },
                    "400": {
                        "description": "Password Is Not Reset"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/books":{
            "post": {
                "tags": [
                    "Book Store App: Add Book"
                ],
                "description": "Add a New Book",
                "summary": "Add a Book",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": " Book ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "author": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "image": {
                                    "type": "string"
                                },
                                "quantity": {
                                    "type": "string"
                                },
                                "price": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book Added successfully"
                    },
                    "400": {
                        "description": "Failed to Add a Book"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            },
            "get": {
                "tags": [
                    "Book-Store App: Retrive All Books"
                ],
                "summary": "Retrive all Books",
                "description": "Retrive all Books",
                "responses": {
                    "200": {
                        "description": "Retrive Books successfully"
                    },
                    "404": {
                        "description": "Failed To Find Book"
                    },
                    "500": {
                        "description": "Internal server error..!"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/books/{id}":{
            "put": {
                "tags": [
                    "Book Store App: Update A Perticular Book"
                ],
                "summary": "Update an existing Book",
                "description": "find by ID and update a Perticular Book",
                "operationId": "updatebooks",
                "parameters": [
                    {
                        "name": " Books ",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "author": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "image": {
                                    "type": "string"
                                },
                                "quantity": {
                                    "type": "string"
                                },
                                "price": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                } 
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book updated successfully"
                    },
                    "404": {
                        "description": "Failed To Update Book"
                    },
                    "500": {
                        "description": "could not find Book"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Book Store App: Delete A Perticular Book"
                ],
                "summary": "Delete a Book",
                "description": "Delete a Book by its Id",
                "operationId": "Delete Book",
                "responses": {
                    "200": {
                        "description": "Book deleted successfully"
                    },
                    "404": {
                        "description": "Failed To Delete Book"
                    },
                    "500": {
                        "description": "could not Find Book"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "JWT": {
            "type": "apiKey",
            "name": "token",
            "in": "header"
        }
    }
}